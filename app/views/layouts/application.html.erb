<!DOCTYPE html>
<html>
  <head>
    <title>AjaxTwitter</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css2?family=Shantell+Sans&display=swap" rel="stylesheet">
    

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    
    <script type="text/javascript">
      window.users = <%= render("users/users.json.jbuilder", users: User.all).html_safe %>; 
    </script>

  </head>
  <header>
<nav class="header-nav-mobile">
  <%= image_tag("icon-ham.png", alt: "Alternative Text", class: "my-image-class", width: "150", height: "150")%>

   <ul class="hidden">
      <li><a href="<%= feed_url %>">Feed</a></li>
      <li><a href="<%= search_users_url %>">User Search</a></li>

       <% if current_user %>
        <li>
          <form class='button-form' action="/session" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="authenticity_token"
      value="<%= form_authenticity_token %>"> 
            <input class="mobile-button" type="submit" value="Logout!">
          </form>
        </li>
      <% else %>
        <li><a   href='<%= new_session_url %>'>Login</a></li>
        <li><a   href='<%= new_user_url %>'>Signup</a></li>
      <% end %>
    </ul>
   
  </nav>

  <span class="logo">
  <h1 class="main-logo">Twitter</h1>
  </span>
  <nav class="header-nav">
   <ul>
      <li><a href="<%= feed_url %>">Feed</a></li>
      <li><a href="<%= search_users_url %>">User Search</a></li>

       <% if current_user %>
